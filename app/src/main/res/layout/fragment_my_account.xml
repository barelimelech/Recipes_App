<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".ui.user.MyAccountFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView10"
        android:layout_width="408dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="500dp"

        android:fontFamily="@font/paprika"
        android:gravity="center"
        android:text="My Account"
        android:textColor="#3E260B"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.276" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="81dp"
        android:layout_height="88dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/avatar"
        app:layout_constraintEnd_toStartOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/boogaloo"
        android:text="Bar Elimelech"

        android:textColor="#3E260B"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <Button
        android:id="@+id/myaccount_myrecipes_btn"
        android:layout_width="155dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="@android:color/transparent"

        android:fontFamily="@font/boogaloo"
        android:shadowColor="#00FFFFFF"
        android:text="My Recipes"
        android:textColor="#3E260B"
        android:textColorHighlight="#00FFFFFF"
        android:textColorLink="#00231F1F"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/myaccount_edit_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:rippleColor="#8F4F4F" />

    <Button
        android:id="@+id/myaccount_othersrecipes_btn"
        android:layout_width="155dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/transparent"

        android:fontFamily="@font/boogaloo"
        android:shadowColor="#00FFFFFF"
        android:text="Others Recipes"
        android:textColor="#3E260B"
        android:textColorHighlight="#00FFFFFF"
        android:textColorLink="#00231F1F"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/myaccount_othersrecipes_btn2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myaccount_myrecipes_btn"
        app:rippleColor="#8F4F4F" />

    <Button
        android:id="@+id/myaccount_othersrecipes_btn2"
        android:layout_width="155dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"

        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/boogaloo"
        android:shadowColor="#00FFFFFF"
        android:text="Categories"
        android:textColor="#3E260B"
        android:textColorHighlight="#00FFFFFF"
        android:textColorLink="#00231F1F"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/myaccount_othersrecipes_btn"
        app:layout_constraintTop_toBottomOf="@+id/myaccount_edit_btn"
        app:rippleColor="#8F4F4F" />

    <Button
        android:id="@+id/myaccount_edit_btn"
        android:layout_width="155dp"
        android:layout_height="75dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="16dp"

        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/boogaloo"
        android:shadowColor="#00FFFFFF"
        android:text="Edit My Account"
        android:textColor="#3E260B"
        android:textColorHighlight="#00FFFFFF"
        android:textColorLink="#00231F1F"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/myaccount_myrecipes_btn"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


</androidx.constraintlayout.widget.ConstraintLayout>